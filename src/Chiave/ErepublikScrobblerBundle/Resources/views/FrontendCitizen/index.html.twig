{% extends "ChiaveCoreBundle::frontendbase.html.twig" %}

{% block body -%}

    <div id="tabela">
        <table>
            <caption>
                <h2>Tutaj znajdziecie ogólne statystyki rozwoju postaci</h2>
            </caption>
                <tbody>
                <tr>
                    <td>LP</td>
                    <td>Avatar</td>
                    <td>ID</td>
                    <td>Nick</td>
                    <td>Dywizja</td>
                    <td>Poziom</td>
                    <td>Ranga</td>
                    <td>Hit Q7</td>
                    <td>Siła</td>
                    <td>Wbity DMG dzisiaj</td>
                    <td>Wbity DMG wczoraj</td>
                </tr>
                {% for citizen in citizens %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>
                        <img src="{{ citizen.smallAvatarUrl }}" />
                    </td>
                    <td>{{ citizen.citizenId }}</td>
                    <td>{{ citizen.nick }}</td>
                    <td>{{ citizen.division('roman') }}</td>
                    <td>{{ citizen.level }}{# <br />(xx/100 %) #}</td>
                    <td>
                        <img src="{{ citizen.rankImageUrl }}" />{# <br /> #}
                        {{ citizen.rankName }}{#  - {{ citizen.rankLevel }} #}
                    </td>
                    <td>{{ citizen.countHit }}</td>
                    <td>{{ citizen.strength }}</td>
                    <td>{% render controller('citizen_stats:getTodayInfluence', {'citizenId': citizen.citizenId } ) %}</td>
                    <td>{% render controller('citizen_stats:getYesterdayInfluence', {'citizenId': citizen.citizenId } ) %}</td>
                </tr>
                {% endfor %}

                </tbody>
        </table>
    </div>

{% endblock %}
